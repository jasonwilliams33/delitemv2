        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	try {

		var remainingDeliveryItems = false;

		var deliveryItemsAgg = new GlideAggregate(DelItemConstants.DELIVERY_ITEM_TABLE);
		deliveryItemsAgg.addEncodedQuery("state=2^delivery=" + current.delivery);
		deliveryItemsAgg.addAggregate("COUNT");
		deliveryItemsAgg.query();
		if(deliveryItemsAgg.next()) {

			if(deliveryItemsAgg.getAggregate('COUNT') > 0) {

				remainingDeliveryItems = true;

			}

		}

		var deliveryGR = new GlideRecord(DelItemConstants.DELIVERY_TABLE);
		if(deliveryGR.get(current.delivery)) {

			if(!remainingDeliveryItems) {		

				deliveryGR.setValue('state',3);

			}

			deliveryGR.setValue('delivery_items_awaiting_collection',parseInt(deliveryGR.delivery_items_awaiting_collection) - 1);
			deliveryGR.update();

		}

	} catch(err) {

		gs.error('['+gs.getCurrentScopeName()+']' + ': Update Delivery Business Rule - Caught error: \n'+err);

	}

})(current, previous);]]></script>
